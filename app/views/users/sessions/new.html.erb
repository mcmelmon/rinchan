<div class='container'>
  <h2 class='mt-2'><%= t('site.actions.sign_in') %></h2>

  <div class='row'>
    <div class='col-md'>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class='field mt-3 email'>
          <label><%= t('site.email') %></label><br />
          <%= f.email_field :email, autofocus: true, autocomplete: 'email' %>
        </div>

        <div class='field mt-2 password'>
          <label><%= t('site.password') %></label><br />
          <%= f.password_field :password, autocomplete: 'off' %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class='field mt-4'>
            <%= f.check_box :remember_me %>
            <label><%= t('site.remember_me') %></label>
          </div>
        <% end -%>

        <div class='actions mt-4'>
          <%= f.submit t('site.actions.sign_in'), class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>

  <div class='mt-3'><%= render 'users/shared/links' %></div>
</div>
