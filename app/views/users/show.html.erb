<div class='user'>
  <h1><%= @user.name %></h1>
  <div class='row'>
    <div class='col-md'>
      <h2><%= t('.friend_heading') %></h2>
      <%= render partial: 'bulletins/form' %>

      <% if @user.bulletins.any? %>
        <h3>Bulletins(<%= @user.bulletins.count %>)</h3>
        <ol class='bulletins'>
          <%= render @bulletins %>
        </ol>
        <%= will_paginate @bulletins %>
      <% end %>
    </div>

    <div class='col-md'>
      <h2><%= t('.public_heading') %></h2>
      <%= render partial: 'topics/form' %>

      <% if @user.topics.any? %>
        <h3>Your public topics(<%= @user.topics.count %>)</h3>
        <ol class='topics'>
          <%= render @topics %>
        </ol>
        <%= will_paginate @topics %>
      <% end %>
    </div>
  </div>
</div>
