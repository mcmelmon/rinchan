<div class='row'>
  <aside class='col-md-4'>
    <section class='user_info'>
      <h1><%= @user.email %></h1>
    </section>
    <section class='bulletin_form'>
      <%= render partial: 'bulletins/form' %>
      </section>
  </aside>
  <div class='col-md-8'>
    <% if @user.bulletins.any? %>
      <h3>Bulletins(<%= @user.bulletins.count %>)</h3>
      <ol class='bulletins'>
        <%= render @bulletins %>
      </ol>
      <%= will_paginate @bulletins %>
    <% end %>
  </div>
</div>
