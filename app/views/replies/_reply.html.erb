<div class='reply mb-4' id='reply-<%= reply.id %>'>
  <div class='timestamp'><%= time_ago_in_words(reply.updated_at) %></div>
  <p><%= reply.body %></p>
  <div class='actions mb-4'>
    <% if reply_belongs_to_current_user?(reply) %>
      <span><%= link_to 'edit', edit_reply_path(reply) %></span> |
      <span><%= link_to 'delete', reply, method: :delete, data: { confirm: t('site.are_you_sure') } %></span>
    <% end %>
  </div>
</div>
